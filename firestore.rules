
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function isRootUser() {
      // Check if the user's email is a designated root email, ignoring case.
      return request.auth.token.email.toLowerCase() == 'mustansir133@gmail.com';
    }
    
    function isPrivilegedUser() {
      // Root user is always privileged, no need to check Firestore.
      if (isRootUser()) {
        return true;
      }
      // For other users, they must have a profile doc and a privileged role.
      let userProfile = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userProfile.exists && userProfile.data.role in ['Admin', 'it-support'];
    }

    // Path rules
    match /users/{userId} {
      allow get: if isOwner(userId) || isPrivilegedUser();
      allow list: if isPrivilegedUser();
      // Allow users to update their own profile, and privileged users to create/update any profile.
      allow create, update: if isOwner(userId) || isPrivilegedUser();
      // Deleting users from the client is unsafe unless it's the root user.
      allow delete: if isRootUser();
    }

    match /users/{userId}/issues/{issueId} {
      // User can create their own issue. Privileged users can manage all issues.
      allow create: if isOwner(userId) || isPrivilegedUser();
      
      // A regular user can `get` their own ticket.
      // A privileged user can `get` any ticket.
      allow get, update: if isOwner(userId) || isPrivilegedUser();

      // This is for collection group queries.
      allow list: if isPrivilegedUser();
      
      // Deleting issues is not allowed from the client for now, unless root user.
      allow delete: if isRootUser();
    }
    
    match /users/{userId}/issues/{issueId}/messages/{messageId} {
      // Only the user who owns the parent issue or a privileged user can read/create messages.
      allow read, create: if isOwner(userId) || isPrivilegedUser();
      // Messages are immutable once created, unless root user needs to intervene.
      allow update, delete: if isRootUser();
    }

    match /users/{userId}/notifications/{notificationId} {
      // User can read, update (isRead), and delete their own notifications.
      allow read, update, delete: if isOwner(userId);
      // Privileged users can create notifications when sending announcements.
      allow create: if isPrivilegedUser();
    }
    
    match /system_settings/ticketCounter {
        // Any authenticated user can read and write to the ticket counter
        // as part of a transaction to generate a new ticket ID.
        allow read, write: if request.auth != null;
    }

    match /announcements/{announcementId} {
      // Only privileged users can create, read and update announcements.
      allow read, create, update: if isPrivilegedUser();
      // Deleting announcements is not allowed from the client, unless root.
      allow delete: if isRootUser();
    }
    
    // Catch-all for other system settings that admins might need to manage.
    match /system_settings/{settingId} {
        allow read, write: if isPrivilegedUser();
    }
  }
}
