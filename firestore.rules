
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    // Path rules
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow update: if isOwner(userId);
      // Creating and deleting users must be done via the Firebase Console
      // or a trusted server environment, not from the client.
      allow create, delete: if false;
    }

    match /users/{userId}/issues/{issueId} {
      // Any authenticated user can create an issue for themselves.
      allow create: if isOwner(userId);
      // Only the user who owns the issue can read or update it.
      allow read, update: if isOwner(userId);
      // Deleting issues is not allowed from the client.
      allow delete: if false;
    }
    
    match /users/{userId}/issues/{issueId}/messages/{messageId} {
      // Only the user who owns the parent issue can read or create messages.
      allow read, create: if isOwner(userId);
      // Messages are immutable once created.
      allow update, delete: if false;
    }
    
    match /system_settings/ticketCounter {
        // Any authenticated user can read and write to the ticket counter
        // as part of a transaction to generate a new ticket ID.
        allow read, write: if request.auth != null;
    }
  }
}
